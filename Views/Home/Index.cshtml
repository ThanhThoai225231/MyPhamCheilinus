<div class="product-wrapper" data-aos="fade-up" data-aos-delay="200">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="product-slider-default-1row default-slider-nav-arrow">
                    <!-- Slider main container -->
                    <div class="swiper-container product-default-slider-4grid-1row">
                        <!-- Additional required wrapper -->
                        <div class="swiper-wrapper">
                            @foreach (var item in Model)
                            {
                                <!-- Start Product Default Single Item -->
                                <div class="product-default-single-item product-color--green swiper-slide">
                                    <div class="image-box">
                                        <a  asp-controller="Home" asp-action="SanPhamTheoDanhMuc" asp-route-maDanhMuc="@item.MaDanhMuc" class="image-link">
                                            <img src="/images/DanhMucSanPham/@item.HinhAnh" alt="@item.TenDanhMuc">
                                        </a>
                                        
                                    </div>
                                    <div class="content">
                                        <div class="content-left">
                                            <h6 class="title">
                                                <a href="product-details-default.html">
                                                    @item.TenDanhMuc
                                                </a>
                                            </h6>
                                            <ul class="review-star">
                                                @for (double i = 0; i < item.DanhGia; i++)
                                                {
                                                    <li class="fill"><i class="ion-android-star"></i></li>
                                                }
                                                @for (double? i = item.DanhGia; i < 5; i++)
                                                {
                                                    <li class="empty"><i class="ion-android-star"></i></li>
                                                }
                                            </ul>
                                        </div>
                                        <div class="content-right">
                                            <span class="price">@string.Format("{0:#,##0} VNĐ", item.Gia)</span>
                                        </div>
                                    </div>
                                </div>
                                <!-- End Product Default Single Item -->
                            }
                        </div>
                    </div>
                    <!-- If we need navigation buttons -->
                    <div class="swiper-button-prev"></div>
                    <div class="swiper-button-next"></div>
                </div>
            </div>
        </div>
    </div>
</div>
