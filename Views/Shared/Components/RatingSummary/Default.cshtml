@model int[]


@if (ViewBag.AverageRating > 0)
{
    <div class="rating-avg">
        <span>@ViewBag.AverageRating.ToString("0.0")/5</span>

    </div>
}
else
{
    <div class="rating-avg">
        <span>Chưa có đánh giá</span>

    </div>
}

